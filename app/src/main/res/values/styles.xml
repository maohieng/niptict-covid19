<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme.NoActionBar"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialAnimations" parent="ToolbarTheme">
        <!-- Window animations support only from API 21+. -->
        <!-- So do nothing -->
    </style>

    <style name="FullscreenTheme" parent="ToolbarTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="TextCollapsingWithShadow" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">1.5</item>
    </style>

</resources>
